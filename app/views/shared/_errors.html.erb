<% if object.errors.any? %>
  <div class='alert alert-danger'>
    <button type='button' class='close' data-dismiss='alert'>&times;</button>
    <ul class="mb-0">
      <% object.errors.full_messages.each do |msg| %>
        <%= content_tag :li, [msg.html_safe, '.'].join %>
      <% end %>
    </ul>
  </div>
<% end %>
